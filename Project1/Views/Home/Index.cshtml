
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .top1 > img {
        width: 200px;
        margin-left:20px;
    }

    .title {
        display: inline-block;
        font-size: 30px;
        padding-left: 10px;
        font-weight: bold;
        position: relative;
        top: 10px;
    }

    .top2 {
        position:relative;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        margin-top: 20px;
    }

    .top3 {
        text-align: center;
        font-size: 16px;
        margin: 20px 0;
        font-weight: bold;
    }

    .imglist img {
        padding:0 20px;
        width: 100%;
    }
</style>
<div>
    <div class="top1">
        <img src="~/Image/1.png" />
    </div>
    <div style="position:relative;height:150px;">
        <img src="~/Image/4.png" style="position:absolute;top:70px;left:0;width:200px;"/>
        <img src="~/Image/2.png" style="position:absolute;top:40px;left:200px;width:80px;" />
        <img src="~/Image/9.png" style="position:absolute;bottom:0;right:0;width:150px;" />
    </div>
    <div class="top2">
        <img src="~/Image/6.png"style="position:absolute;top:50px;left:0;width:50px;" />
        <p>双师直播<span style="color:#e4cd31;">免费试听月</span></p>
        <p>把名师送到家门口</p>
        <p>手机上课，免费试听</p>
        <p>中考成败，在此一举</p>
        <img src="~/Image/5.png"style="position:absolute;top:-10px;right:0;width:50px;" />
    </div>
    <div class="imglist">
        <img src="~/Image/微信图片_20180330080855.jpg" />
    </div>
    <div class="top3" style="position:relative;">
        <img src="~/Image/2.png" style="position:absolute;top:60px;left:50px;width:80px;"/>
        <p>同歌双师课堂</p>
        <p>哈尔滨中考冲刺课程</p>
        <p>4月免费试听</p>
        <p>上课时间：@ViewBag.time</p>
    </div>
    <div class="imglist">
        <img src="~/Image/微信图片_20180330080913.jpg" />
        <img src="~/Image/微信图片_20180330080941.jpg" style="margin-top:20px;"/>
    </div>
    <form style="padding:20px;" action="/Home/Index" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="phone" placeholder="请输入手机号..." />
        </div>
        <div class="text-center">
            <button style="background-color:#cbe625;font-weight:bold;" type="submit" class="btn btn-default">输入手机号，立即观看</button>
        </div>
    </form>
</div>

