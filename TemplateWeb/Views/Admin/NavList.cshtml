
@{
    Layout = null;
}

@Styles.Render("~/bundles/css-lib")
@Scripts.Render("~/bundles/script-lib")
@Scripts.Render("~/bundles/script-public")

<link href="~/Plugin/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Plugin/datatables/js/jquery.dataTables.js"></script>
<script src="~/Plugin/datatables/js/dataTables.bootstrap.js"></script>

<link href="~/Content/admin/admin-public.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-public.js"></script>
<link href="~/Content/admin/admin-content.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-nav.js"></script>

<div class="tp-content" ng-app="app" ng-controller="navList">
    <table id="dt" class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>序号</th>
                <th>标题</th>
                <th>状态</th>
                <th>排序</th>
                <th>
                    <button class="btn btn-sm btn-success" data-toggle="modal" data-target="#nav-add">新增</button>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="d in data" on-render-finished>
                <td>{{$index+1}}</td>
                <td>
                    <span hidden>{{d.title}}</span>
                    <input type="text" ng-model="d.title" />
                    <a class="tp-table-a" ng-click="Save(d)">修改</a>
                </td>
                <td>
                    <label class="label label-success" ng-if="d.enable">已启用</label>
                    <label class="label label-danger" ng-if="!d.enable">已停用</label>
                    <a class="tp-table-a" ng-if="d.enable" ng-click="SetEnable(d)">点击停用</a>
                    <a class="tp-table-a" ng-if="!d.enable" ng-click="SetEnable(d)">点击启用</a>
                </td>
                <td>
                    <button class="btn btn-sm btn-info" ng-click="SetSort(d,sortType.up)">&nbsp;<i class="glyphicon glyphicon-arrow-up"></i>&nbsp;</button>
                    <button class="btn btn-sm btn-warning" ng-click="SetSort(d,sortType.down)">&nbsp;<i class="glyphicon glyphicon-arrow-down"></i>&nbsp;</button>
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Admin/NavContent?id={{d.id}}">内容管理</a>
                    <button class="btn btn-sm btn-danger" ng-click="Delete(d)">删除</button>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="modal fade" id="nav-add" tabindex="-1" ng-controller="navAdd">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title">导航添加</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">标题：</label>
                            <input type="text" class="form-control" placeholder="请输入导航标题..." ng-model="navModel.title">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-sm btn-success" ng-click="Save()">保存</button>
                </div>
            </div>
        </div>
    </div>
</div>
