
@{
    Layout = null;
}

@Styles.Render("~/bundles/css-lib")
@Styles.Render("~/bundles/css-public")
@Scripts.Render("~/bundles/script-lib")
@Scripts.Render("~/bundles/script-public")

<link href="~/Plugin/easyupload/css/easy-upload.css" rel="stylesheet" />
<script src="~/Plugin/easyupload/js/easyUpload.js"></script>

<link href="~/Content/admin/admin-public.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-public.js"></script>
<link href="~/Content/admin/admin-layout.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-employ.js"></script>

<div class="tp-content" ng-app="app" ng-controller="employAdd">
    <div class="row">
        <div class="col-xs-4">
            <div class="form-group">
                <label>分类：</label>
                <select class="form-control" ng-options="t.id as t.name for t in employType" ng-model="employModel.type_id"></select>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="form-group">
                <label>标题：</label>
                <input type="text" class="form-control" placeholder="请输入职位名称..." ng-model="employModel.position_name">
            </div>
        </div>
        <div class="col-xs-4">
            <div class="form-group">
                <label>作者：</label>
                <input type="text" class="form-control" placeholder="请输入招聘数量..." ng-model="employModel.employ_number">
            </div>
        </div>
        <div class="col-xs-4">
            <div class="form-group">
                <label>发布时间：</label>
                <input type="text" class="form-control" placeholder="请输入薪资水平..." ng-model="employModel.salary">
            </div>
        </div>
        <div class="col-xs-4">
            <div class="form-group">
                <label>封面图片：</label>
                <input type="text" class="form-control" placeholder="请输入薪资水平..." ng-model="employModel.salary">
            </div>
            <div class="form-group">
                <label>描述：</label>
                <input type="text" class="form-control" placeholder="请输入薪资水平..." ng-model="employModel.salary">
            </div>
            <div class="form-group">
                <label>内容：</label>
                <input type="text" class="form-control" placeholder="请输入薪资水平..." ng-model="employModel.salary">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group text-center">
            <button type="button" class="btn btn-success" ng-click="Save()">保&nbsp;存</button>
        </div>
    </div>
</div>
