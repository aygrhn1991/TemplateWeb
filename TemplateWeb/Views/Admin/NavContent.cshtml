
@{
    Layout = null;
}

@Styles.Render("~/bundles/css-lib")
@Scripts.Render("~/bundles/script-lib")
@Scripts.Render("~/bundles/script-public")



<link href="~/Content/admin/admin-public.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-public.js"></script>
<link href="~/Content/admin/admin-content.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-nav.js"></script>

<div class="tp-content" ng-app="app" ng-controller="navContent">
    <form>
        <div class="form-group">
            <label>导航标题：【{{navModel.title}}】</label>
        </div>
        <div class="form-group">
            <label>模式选择：</label>
            <div class="btn-group">
                <button class="btn btn-default" ng-class="{'btn-success':m.key==navModel.mode}" ng-repeat="m in modeType" ng-click="SetMode(m)">{{m.value}}</button>
            </div>
        </div>
    </form>
    <hr />
    <form ng-show="navModel.mode==0">
        <div class="form-group">
            <label>Url：</label>
            <input type="text" class="form-control" placeholder="请以 http:// 或 https:// 起始..." ng-model="navModel.url">
        </div>
    </form>
    <form ng-show="navModel.mode==1">
        <div class="form-group">
            <label>已选择单页：【{{navModelPageTitle}}】</label>
            <div class="input-group">
                <span class="input-group-btn">
                    <button disabled class="btn btn-default" type="button">&nbsp;<i class="glyphicon glyphicon-search"></i>&nbsp;</button>
                </span>
                <input type="text" class="form-control" placeholder="请输入标题关键字..." ng-model="pageKeyWord">
            </div>
            <div class="tp-table-wrapper">
                <table class="table table-bordered table-striped table-hover">
                    <tbody>
                        <tr ng-repeat="p in pageList | filter:pageKeyWord">
                            <td>{{$index+1}}</td>
                            <td>{{p.title}}</td>
                            <td>
                                <label class="label label-success" ng-click="SetPage(p)">选择</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
    <table class="table table-bordered table-striped table-hover" ng-show="navModel.mode==2">
        <thead>
            <tr>
                <th>序号</th>
                <th>标题</th>
                <th>
                    <button class="btn btn-success" data-toggle="modal" data-target="#subnav-add">新增</button>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>123123</td>
                <td>123123</td>
                <td>123123</td>
            </tr>
        </tbody>
    </table>
    <div class="modal fade" id="subnav-add" tabindex="-1" ng-controller="subnavAdd">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title">导航子添加</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">标题：</label>
                            <input type="text" class="form-control" placeholder="请输入子导航标题..." ng-model="subnavModel.title">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-sm btn-success" ng-click="Save()">保存</button>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group text-center">
        <button type="button" class="btn btn-success" ng-click="Save()">保&nbsp;存</button>
    </div>
</div>

