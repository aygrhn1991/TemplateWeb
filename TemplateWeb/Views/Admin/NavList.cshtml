
@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/font-awesome.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.2.4.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/angular.js"></script>

<link href="~/Plugin/pace/css/themes/black/pace-theme-center-simple.css" rel="stylesheet" />
<script src="~/Plugin/pace/js/pace.js"></script>



<link href="~/Plugin/datatables/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Plugin/datatables/js/jquery.dataTables.js"></script>

<link href="~/Content/admin/admin-public.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-public.js"></script>
<link href="~/Content/admin/admin-content.css" rel="stylesheet" />
<script src="~/Scripts/admin/admin-page.js"></script>
<style>
    .btn-sm {
        line-height: 0;
    }
</style>
<div class="tp-content" ng-app="app" ng-controller="pageList">
    <table id="dt" class="display">
        <thead>
            <tr>
                <th>序号</th>
                <th>标题</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="d in data" on-render-finished>
                <td>{{$index+1}}</td>
                <td>{{d.title}}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Admin/PageAdd?id={{d.id}}">编辑</a>
                    <button class="btn btn-sm btn-danger" ng-click="delete(d)">删除</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
